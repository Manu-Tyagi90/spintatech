{
  "name": "spintatech",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "dev:server": "npm run dev --workspace=apps/server",
    "build": "npm run build --workspace=packages/shared && npm run build --workspace=apps/web",
    "build:server": "npm run build --workspace=packages/shared && npm run build --workspace=apps/server",
    "type-check": "npm run type-check --workspaces",
    "lint": "npm run lint --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/helmet": "^4.0.0",
    "@types/nodemailer": "^6.4.14",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "react-hook-form": "^7.51.0"
  }
}